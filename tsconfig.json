{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSources": true,
		"sourceMap": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"verbatimModuleSyntax": true,
		"types": [
			"svelte",
			"node"
		],
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ES7"
		]
	},
	"include": [
		"**/*.ts",
		"**/*.svelte"
	]
}
